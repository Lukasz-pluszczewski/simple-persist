{
  "name": "fullstack-simple-persist",
  "version": "1.0.0-rc.7",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.cjs",
      "default": "./dist/react.mjs"
    },
    "./express": {
      "types": "./dist/express.d.ts",
      "import": "./dist/express.mjs",
      "require": "./dist/express.cjs",
      "default": "./dist/express.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "react": [
        "dist/react.d.ts"
      ],
      "express": [
        "dist/express.d.ts"
      ],
      "*": [
        "dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup-node",
    "test": "vitest --globals",
    "generateToc": "markdown-toc --bullets=\"*\" --no-firsth1 README.md",
    "test:e2e": "vitest",
    "prettier": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lukasz-pluszczewski/simple-persist.git"
  },
  "author": "Łukasz Pluszczewski",
  "bugs": {
    "url": "https://github.com/Lukasz-pluszczewski/simple-persist/issues"
  },
  "homepage": "https://github.com/Lukasz-pluszczewski/simple-persist",
  "keywords": [
    "persist",
    "sync",
    "simple",
    "node",
    "react",
    "db"
  ],
  "license": "MIT",
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/node-persist": "^3.1.8",
    "@types/supertest": "^6.0.3",
    "eventsource": "^4.0.0",
    "express": "^5.0.1",
    "jsdom": "^26.1.0",
    "markdown-toc": "^1.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-toolbelt": "^9.6.0",
    "tsup": "^8.3.4",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "node-persist": "^3.1.3"
  },
  "peerDependencies": {
    "express": ">=4.21.1 <6.0.0",
    "react": ">=18.0.0 <20.0.0"
  },
  "tsup": {
    "entry": {
      "server": "src/server.ts",
      "client": "src/client.ts",
      "react": "src/react.tsx",
      "express": "src/express.ts",
      "index": "src/index.ts"
    },
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "clean": true
  }
}
